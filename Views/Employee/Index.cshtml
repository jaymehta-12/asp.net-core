@model IEnumerable<EmployeeDetails.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Details</h1>
<hr />
<p>
   
</p>
<table class="table" class="table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ECode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OL)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-sm btn-success">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ECode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OL)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-dark">Edit</a> |
               
                <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
